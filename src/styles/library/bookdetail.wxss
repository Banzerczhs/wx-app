.detail{
    width:100%;
    height:100%;
}
.detail .backText{
    width: 100%;
    position: fixed;
    left:0;
    top:0;
    z-index: 99999;
    padding-left: 20rpx;
}
.backText image{
    width: 40rpx;
    height:40rpx;
    position: absolute;
}
.backText .text{
    position: absolute;
    width: 70%;
    left: 80rpx;
    height: 40rpx;
    overflow: hidden;
}
.backText .text text{
    position:absolute;
    transition: transform .1s;
    -webkit-transition: transform .1s;
    transform: translateY(100%);
    -webkit-transform: translateY(100%);
}
.backText .text.active text{
    transform: translateY(0px);
    -webkit-transform: translateY(0px);
}
.cover{
    width: 100%;
    background-repeat:no-repeat;
    background-position:0 0;
    background-size:100% 100%;
}
.cover-box{
    display:flex;
    display:-webkit-flex;
    justify-content:space-around;
    height:100%;
    background-color:rgba(0,0,0,0.7);
    padding:20rpx 30rpx;
}
.cover-image{
    flex-grow:2;
}
.cover-image image{
    width:100%;
    height:100%;
}
.cover-desc{
    flex-grow:1;
    color:#fff;
    margin: 10rpx 0;
    margin-left: 40rpx;
}
.cover-desc .desc-h2{
    font-size: 34rpx;
    margin-top: 2px;
    margin-bottom: 5px;
}
.cover-desc .desc-author{
    font-size: 26rpx;
    margin:5px 0;
}
.cover-desc .desc-score{
    margin:5px 0;
}
.cover-desc .desc-type{
    margin:5px 0;
}
.bookInfo{
    width: 100%;
    height:120rpx;
    display:flex;
    display:-webkit-flex;
    justify-content:space-around;
    background-color:#fff;
    align-items:center;
    box-shadow:1px 1px 4px #270752;
    margin-bottom: 40rpx;
}
.bookInfo-item text{
    display:block;
    text-align:center;
    line-height:20px;
}
.bookInfo-item .num{
    font-size: 34rpx;
}
.bookInfo-item .text{
    font-size: 26rpx;
    color:rgb(105, 105, 105);
}
.bookSynopsis{
    padding:15rpx;
    background-color:#fff;
    box-shadow:1px 1px 4px #270752;
    font-size: 28rpx;
    margin-bottom: 40rpx;
}
.bookSynopsis .synopsis text{
    font-size: 34rpx;
}
.bookSynopsis .Catalog{
    display:flex;
    display:-webkit-flex;
    justify-content:space-around;
    align-items:center;
    margin-top: 10px;
    position:relative;
    padding-top: 15rpx;
}
.bookSynopsis .Catalog::before{
    content:"";
    display:block;
    width: 100%;
    height: 1px;
    background-color:rgb(219, 219, 219);
    position:absolute;
    top:0;
    margin:0 auto;
}
.bookSynopsis .Catalog text:nth-of-type(1){
    flex-grow:2;
    font-size: 36rpx;
}
.bookSynopsis .Catalog text:nth-of-type(2){
    flex-grow:3;
    text-align:right;
    padding-right:40rpx;
}
.bookSynopsis .Catalog image{
    width: 40rpx;
    height: 40rpx;
}
.comment{
    width: 100%;
    padding:15rpx;
    background-color:#fff;
    box-shadow:1px 1px 4px #270752;
}
.comment .comment-title{
    display:flex;
    display:-webkit-flex;
    justify-content: space-around;
    align-items:center;
    margin-bottom: 30rpx;
}
.comment .comment-title text:nth-of-type(1){
    flex-grow:1;
}
.comment .comment-title text:nth-of-type(2){
    flex-grow:3;
    text-align:right;
    padding-right:40rpx;
}
.comment .comment-title image{
    width: 40rpx;
    height:40rpx;
}
.comment .comment-item{
    margin-bottom: 20rpx;
}
.comment .comment-item::after{
    content:"";
    display:block;
    clear:both;
}
.comment-item image{
    width: 60rpx;
    height:60rpx;
    border-radius:50%;
    float:left;
    margin:0 20rpx;
    margin-top: 15rpx;
}
.comment-item .item-text{
    width:85%;
    float:left;
}
.item-text .item-author{
    font-size: 26rpx;
    color: #0081ff;
}
.item-text .item-content text{
    font-size: 26rpx;
    color: #949494;
}
.option{
    width: 100rpx;
    height: 100rpx;
    position:fixed;
    right:20rpx;
    bottom:20rpx;
}
.option view{
    width: 100%;
    height:100%;
    background-color:#0081ff;
    border-radius:50%;
    border:solid 2px #fff;
    box-shadow:0 -1px 4px 0px #270752;
    transform:rotate(0deg) scale(0.5);
    -webkit-transform:rotate(0deg) scale(0.5);
    position:absolute;
    top:0;
    transition:all .5s;
    -webkit-transition:all .5s;
}
.option view image{
    width: 50rpx;
    height:50rpx;
    position:absolute;
    left:50%;
    top:35%;
    transform:translate(-50%,-50%);
    -webkit-transform:translate(-50%,-50%);
}
.option view text{
    text-align:center;
    position:absolute;
    left : 0;
    right:0;
    bottom:10rpx;
}
.option .btn{
    transform:scale(1);
    -webkit-transform:scale(1);
}
.option .btn image{
    width: 60rpx;
    height:60rpx;
    top:50%;
}
.option .Bookshelf.active{
    top:-110rpx;
    transform:rotate(360deg) scale(1);
    -webkit-transform:rotate(360deg) scale(1);
}
.option .Borrowing.active{
    top:-220rpx;
    transform:rotate(360deg) scale(1);
    -webkit-transform:rotate(360deg) scale(1);
}
.option .Bookshelf text{
    font-size: 20rpx;
    color:#fff;
}
.option .Borrowing text{
    font-size: 20rpx;
    color:#fff;
}
.option .activebg{
    background-color:#fff;
    border:solid 2px #1296db;
}
.option .activebg text{
    color:#1296db;
}