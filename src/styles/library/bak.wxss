.navbar{
    height:7vh;
    width:100%;
    overflow:hidden;
    position: relative;
    z-index:100;
    top:0;
}
.navbar button{
    background:rgb(218, 176, 209);
    color:#fff;
    width:50%;
    height:100%;
    float:left;
}
.child{
    display: inline-block;
    vertical-align:top;
    width:335rpx;
    height:32vh;
    margin:10rpx 20rpx;
    text-align: center;
    overflow:hidden;
    position: relative;
    background-color:rgb(247, 201, 103);
    border-radius:8px;
    box-shadow:1px 1px 4px #270752;
}
.child-top{
    width:250rpx;
    height:70%;
    margin: 0 auto;
    margin-top:10px;
    position:relative;
    border:solid 1px transparent;
}
.child-top image{
    width: 100%;
    height:100%;
    border-radius: 4px;
}

.child .child-text text{
    font:12px/1.5 "微软雅黑";
    color:rgb(99, 58, 12);
    margin: 0 10px;
    padding:0 10px;
    position: relative;
}
.child .child-text text:nth-child(1)::after{
   content:'|';
    margin-left:30px;
}
.child .child-name{
    position:relative;
    bottom:10px;
    color:rgb(99, 58, 12);
    font:12px/20px "微软雅黑";
}