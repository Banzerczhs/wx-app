page{
    background-image: linear-gradient(#1d5dea 50%,#1828ac);
    background-size: 100% 100%;
    width:100%;
    height: 100%;
}
.navbar{
    height:7vh;
    line-height:7vh;
    width:100%;
    overflow:hidden;
    position: relative;
    z-index:100;
    background:rgba(250,250,250,0.8);
    left:0;
}
.navbar text{
    color:#333;
    font-size:30rpx;
    width:50%;
    height:100%;
    float:left;
    text-align: center;
    transition: 0.5s;
}
.navbar .textActive{
    font-size:35rpx;
    color:rgb(121, 13, 13);
    font-weight: 600;
}
.child{
    display: inline-block;
    vertical-align:top;
    width:715rpx;
    height:32vh;
    margin:10rpx 20rpx;
    overflow:hidden;
    position: relative;
    background-color:rgba(255, 255, 255,1);
    border-radius:4px;
    box-shadow:1px 1px 4px #270752;
    padding: 10px;
    box-sizing: border-box;
}
.child-left{
    width:40%;
    height:100%;
    float:left;
    border:solid 1px transparent;
    box-sizing: border-box;
}
.child-left image{
    width: 100%;
    height:100%;
    border-radius: 4px;
    position:relative;
}
.child-left image::before{
    content:"";
    display: block;
    width: 100%;
    height:100%;
    position:absolute;
    left:0;
    top:0;
}
.child-right{
    width: 54%;
    height:100%;
    margin-left: 15px;
    float: left;
}
.child-right view{
    font:16px/1.5 "微软雅黑";
    color:rgb(99, 58, 12);
    vertical-align: center;
    text-align:left;
}
.child-right text{
    color:rgb(70, 41, 7);
}
/* 借阅历史 */
.historybox{
    display: inline-block;
    vertical-align:top;
    width:335rpx;
    height:32vh;
    margin:10rpx 20rpx;
    text-align: center;
    overflow:hidden;
    position: relative;
    background-color:rgba(255, 255, 255,1);
    border-radius:4px;
    box-shadow:1px 1px 4px #270752;
}
.TimeText{
    width:100%;
    height:7vh;
    line-height:7vh;
    padding-left:30px;
    color:rgb(158, 52, 25);
    background: #e2e6ad;
}
.TimeText:not(:nth-child(1)){
    margin-top:15px;
}
.history-top{
    width:250rpx;
    height:70%;
    margin: 0 auto;
    margin-top:10px;
    position:relative;
    border:solid 1px transparent;
}
.history-top image{
    width: 100%;
    height:100%;
    border-radius: 4px;
}
 .history-name{
    position:relative;
    top:10px;
    color:rgb(99, 58, 12);
    font:16px/20px "微软雅黑";
}
/*整页效果*/
.movebox{
    width:200%;
    height:100%;
    position: relative;
}
.pagebox1{
   width:50%;
    position: absolute;
}
.pagebox2{
    width:50%;
   position: absolute;
    transform:translateX(100%);
    /* display:none; */
}