image{
    vertical-align: top;
}
page{
    font-family: Arial, Helvetica, sans-serif;
    background: url('https://www.quyun.online/assets/image/bg1.png') no-repeat 0 0;
    background-size:100% 100%;
    width:100%;
    height:100%;
    position: relative;
}
.bg-custom-gradient{
    background-image: linear-gradient(45deg,#3a78ff 10%,#1d5dea);
}
.text-custom-white{
    color:#fff;
}
.text-custom-blue{
    color: #5fbaf6;
}
.absolute{
    position: absolute;
    left:0;
    top:0;
}
.scroll{
    position:absolute;
    left:0;
    right:0;
    top:0;
    bottom:0;
    overflow:hidden;
}
.bg-gradual-blue{
    background-image:linear-gradient(45deg, #0081ff, #1c7bbb);
}
.bg-custom-orange{
    background-color:#ec5109;
}
.search-text{
    display:inline-block;
    border-radius:30rpx;
    padding:12rpx 30rpx;
    margin:20rpx;
    background-color:rgba(255,255,255,0.3);
    color:#fff;
}