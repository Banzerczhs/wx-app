.DrawerPage{
    position: absolute;
    width: 100vw;
    bottom:0;
    left: 0vw;
    transition: all 0.4s;
    color:#fff;
}
.DrawerPage.show {
    transform: scale(0.9, 0.9);
    left: 85vw;
    box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
    transform-origin: 0;
}
.DrawerWindow{
    position: absolute;
    width: 85vw;
    left: 0;
    top: 0;
    bottom:0;
    transform: scale(0.9, 0.9) translateX(-100%);
    opacity: 0;
    pointer-events: none;
    transition: all 0.4s;
}

.DrawerWindow.show {
    transform: scale(1, 1) translateX(0%);
    opacity: 1;
    pointer-events: all;
}

.DrawerClose {
    position: absolute;
    width: 40vw;
    height: 100vh;
    right: 0;
    top: 0;
    color: transparent;
    padding-bottom: 30rpx;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    letter-spacing: 5px;
    font-size: 50rpx;
    opacity: 0;
    pointer-events: none;
    transition: all 0.4s;
}

.DrawerClose.show {
    opacity: 1;
    pointer-events: all;
    width: 15vw;
    color: #fff;
}
/* 自己添加 */
.navbox{
    position:relative;
    z-index:999;
}
.navimage{
    position:absolute;
    width:50rpx;
    height:50rpx;
    left:10rpx;
}
.contentBox{
    position:relative;
    width:100%;
    padding:0 20rpx;
    overflow:hidden;
}
.roomState{
    position:relative;
    height:280rpx;
    padding:15rpx 0;
    box-sizing:content-box;
}
.roomState-Icon{
    position:absolute;
    top:50%;
    left:10%;
    transform:translateY(-50%);
    -webkit-transform:translateY(-50%);
}
.roomState-Icon::after{
    content:"";
    display:block;
    clear:both;
}
.roomState-Icon view{
    float:left;
    margin:0 10rpx;
}
.roomState-Icon image{
    width:60rpx;
    height:80rpx;
    margin:0 10rpx;
    vertical-align:middle;
}
.roomState-Icon text{
    color:#fff;
}
.roomState-model{
    width: 200rpx;
    height:200rpx;
    position:absolute;
    right:32rpx;
    top:50%;
    transform:translateY(-50%);
    -webkit-transform:translateY(-50%);
}
.roomState-model .text{
    position:absolute;
    width: 100%;
    text-align:center;
    color:#fff;
}
.roomState-model .model-title{
    top:-40rpx;
}
.roomState-model .model-desc{
    bottom:-40rpx;
}
.roomState-model .circle{
    width: 100%;
    height:100%;
    position:absolute;
    left:0;
    top:0;
    background-color:#e0641a;
    border-radius:50%;
}
.roomState-model .circle::after{
    content:"";
    display:block;
    clear:both;
}
.circle .small-circle{
    width: 85%;
    height:85%;
    background-color:#1e60ee;
    position:absolute;
    left:50%;
    top:50%;
    transform:translate(-50%,-50%);
    -webkit-transform:translate(-50%,-50%);
    border-radius:50%;
    z-index:10;
}
.small-circle text{
    position:absolute;
    left:50%;
    top:50%;
    transform:translate(-50%,-50%);
    -webkit-transform:translate(-50%,-50%);
    font-size: 34rpx;
    font-weight: bold;
    color:#e0641a;
}
.circle .small-circle::after{
    content:"";
    display:block;
    width: 100%;
    height:100%;
    position:absolute;
    left:0;
    top:0;
    border-radius:50%;
    background-color:rgba(255,255,255,0.5);
    z-index:-1;
}
.roomState-model .rect{
    width:50%;
    height:100%;
    float:left;
    overflow:hidden;
}
.roomState-model .rect view{
    width: 100%;
    height:100%;
    background-color:rgb(209, 209, 209);
    transform:rotate(0deg);
    -webkit-transform:rotate(0deg);
}
.roomState-model .left-rect view{
    transform-origin:right center;
    -webkit-transform-origin:right center;
    border-radius:200rpx 0 0 200rpx;
    transition:transform .5s linear;
    -webkit-transition: transform .5s linear;
}
.roomState-model .right-rect view{
    transform-origin:left center;
    -webkit-transform-origin:left center;
    border-radius:0 200rpx 200rpx 0;
    transition:transform .5s .5s linear;
    -webkit-transition: transform .5s .5s linear;
}
.row{
    display:inline-block;
    width: 100%;
    position:relative;
    margin-bottom: 20rpx;
    white-space:nowrap;
    padding:0 18rpx 0 70rpx;
}
.row .row-title{
    position:absolute;
    left:2%;
    top:22%;
}
.row .row-list{
    width: 100%;
    position:relative;
}
.row .row-list::before{
    width: 100%;
    height:1px;
    background-color:#fff;
    content:"";
    display:block;
    position:absolute;
    bottom:0;
    box-shadow:1px 1px 4px #270752;
}
.state{
    margin:0 10rpx;
    display:inline-block;
}
.state image{
    width:60rpx;
    height:80rpx;
}
.state text{
    display:block;
    text-align:center;
    margin-bottom: 15rpx;
}