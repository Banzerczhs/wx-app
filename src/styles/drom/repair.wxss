.page{
    width:100%;
    height:100%;
}
.navbar {
    width:80%;
    height:6vh;
    line-height:5vh;
    display:flex;
    display:-webkit-flex;
    position:relative;
    z-index:100;
    justify-content:space-around;
    margin:0 auto;
}
.navbar view {
    color:rgb(216, 216, 216);
    font-size:30rpx;
    text-align:center;
    padding:10px 0;
    flex-grow:1;
    position:relative;
}
.navbar .textActive {
    font-size:30rpx;
    height:6vh;
    color:#fff;
    font-weight:600;
    border-bottom:2px solid #fff;
}
.content-box{
    width: 200%;
    transform: translateX(0%);
}
.content-item{
    width:50%;
    height:100%;
    overflow: hidden;
    position:relative;  
    float:left;
}
.scroll-box{
    height:100%;
}
.scroll-item{
    width:90%;
    margin:0 auto;
    background:rgba(255, 255, 255, 0.3);
    border-radius:5px;
    margin-top:20px;
    padding:10rpx;
    position: relative;
}
.item-image{
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    position: absolute;
    margin-left:10rpx;
    left:0rpx;
    top:30rpx;
}
.item-right{
    position:relative;
    left:138rpx;
    width:500rpx;
    margin-left:10rpx;
}
.item-name{
    width:100%;
    height:43rpx;
    font-size:18px;
    line-height:50rpx;
    overflow: hidden;
    color:rgb(255, 255, 255);
    margin-bottom:7px;
}
.item-time{
    width:100%;
    height:43rpx;
    font-size:14px;
    color:#fff;
}
.item-right text{
    display: block;
    font-size:16px;
    color:rgb(196, 247, 238);
    margin-bottom:10px;
}
.item-image-box image{
    display: inline-block;
    max-width: 500rpx;
    margin-bottom:10rpx;
}
/* 下方+按钮 */
.option{
    width: 100rpx;
    height: 100rpx;
    position:fixed;
    right:20rpx;
    bottom:20rpx;
}
.option view{
    width: 100%;
    height:100%;
    background-color:#0081ff;
    border-radius:50%;
    border:solid 2px #fff;
    box-shadow:0 -1px 4px 0px #270752;
    transform:rotate(0deg) scale(0.5);
    -webkit-transform:rotate(0deg) scale(0.5);
    position:absolute;
    top:0;
    transition:all .5s;
    -webkit-transition:all .5s;
}
.option .btn image{
    width: 60rpx;
    height:60rpx;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    -webkit-transform:translate(-50%,-50%);
}
.option view text{
    position:absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    color:#fff;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items:center;
}
.option .btn{
    transform:scale(1);
    -webkit-transform:scale(1);
}
.option .Bookshelf.active{
    top:-110rpx;
    transform:rotate(360deg) scale(1);
    -webkit-transform:rotate(360deg) scale(1);
}